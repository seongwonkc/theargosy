---
layout: "layouts/base.njk"
title: "Home"
summary: "Latest stories from {{ site.title }}"
---

{% set items = collections.articles %}
{% if items and items.length > 0 %}
  {% set top = items[0] %}
  <section class="grid">
    <div>
      <a class="card" href="{{ top.url }}">
        {% if top.data.image %}
        <img src="{{ top.data.image }}" alt="{{ top.data.title }}">
        {% endif %}
        <h2>{{ top.data.title }}</h2>
        <p class="muted">{{ top.date | dateReadable }} • {{ top.data.section }} • {{ top.data.author }}</p>
        <p>{{ top.data.summary }}</p>
      </a>
    </div>
    <div>
      <h3>Latest</h3>
      <ul style="list-style:none; padding:0; margin:0;">
        {% for post in items | slice(1, 12) %}
          <li style="margin-bottom:1rem;">
            <a class="card" href="{{ post.url }}">
              <strong>{{ post.data.title }}</strong>
            </a><br>
            <span class="muted">{{ post.date | dateReadable }} • {{ post.data.section }}</span>
          </li>
        {% endfor %}
      </ul>
    </div>
  </section>
{% else %}
  <p>No articles yet.</p>
{% endif %}