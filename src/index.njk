  <script>
    // Persisted theme toggle
    const themeBtn = document.getElementById('themeToggle');
    const root = document.documentElement;
    const stored = localStorage.getItem('theme');
    if (stored === 'dark' || (!stored && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
      root.classList.add('dark');
      themeBtn && themeBtn.setAttribute('aria-pressed', 'true');
    }
    themeBtn?.addEventListener('click', () => {
      const isDark = root.classList.toggle('dark');
      localStorage.setItem('theme', isDark ? 'dark' : 'light');
      themeBtn.setAttribute('aria-pressed', String(isDark));
    });

    // Mobile menu
    const menuBtn = document.getElementById('menuBtn');
    const mobileMenu = document.getElementById('mobileMenu');
    menuBtn?.addEventListener('click', () => {
      const open = mobileMenu.classList.toggle('hidden');
      menuBtn.setAttribute('aria-expanded', String(!open));
    });

    // Simple client-side search + tag filters
    const q = document.getElementById('search');
    const qBtn = document.getElementById('searchBtn');
    const mq = document.getElementById('mSearch');
    const cards = Array.from(document.querySelectorAll('.card'));
    function applyFilters() {
      const query = (q?.value || mq?.value || '').trim().toLowerCase();
      const activeTag = document.querySelector('.filter-chip[aria-pressed="true"]').dataset.tag;
      cards.forEach(card => {
        const title = card.dataset.title.toLowerCase();
        const tags = card.dataset.tags.toLowerCase();
        const matchesQuery = !query || title.includes(query);
        const matchesTag = activeTag === 'all' || tags.includes(activeTag);
        card.classList.toggle('hidden', !(matchesQuery && matchesTag));
      });
    }
    qBtn?.addEventListener('click', applyFilters);
    q?.addEventListener('keydown', e => { if (e.key === 'Enter') applyFilters(); });
    mq?.addEventListener('keydown', e => { if (e.key === 'Enter') applyFilters(); });

    // Tag filter chips
    const chips = document.querySelectorAll('.filter-chip');
    chips.forEach(chip => chip.addEventListener('click', () => {
      chips.forEach(c => c.setAttribute('aria-pressed', 'false'));
      chip.setAttribute('aria-pressed', 'true');
      applyFilters();
    }));
  </script>

  <!-- AUTO-LIST: Build homepage cards from /articles.json generated at build time -->
  <script type="module">
    async function loadArticles(){
      try{
        const res = await fetch('/articles.json',{cache:'no-store'});
        if(!res.ok) return;
        const articles = await res.json();
        // normalize + sort newest first
        const parsed = articles.map(a=>({
          ...a,
          date: a.date || a.published || a.created || '',
          section: (a.section||'').toLowerCase(),
          url: a.url || a.path || `articles/${a.slug||''}.html`
        })).filter(a=>a.title && a.date).sort((a,b)=> new Date(b.date) - new Date(a.date));

        // helper creators
        const fmtDate = (iso)=>{
          const d=new Date(iso);
          return d.toLocaleDateString(undefined,{year:'numeric',month:'short',day:'numeric'});
        };
        const escape = (s)=>String(s||'').replace(/[&<>]/g, c=>({"&":"&amp;","<":"&lt;",">":"&gt;"}[c]));

        // FEATURED (top 3 latest)
        const featured = document.querySelector('#featured .grid');
        if(featured){
          featured.innerHTML = parsed.slice(0,3).map(a=>`
          <article class="card bg-white dark:bg-gray-900 rounded-xl shadow ring-1 ring-gray-200 dark:ring-gray-800 overflow-hidden" data-tags="${escape(((a.tags||[]).join(',') + ',' + (a.section||'')).toLowerCase())}" data-title="${escape(a.title)}">
            <img class="h-48 w-full object-cover" src="${escape(a.image||'https://placehold.co/600x400/94a3b8/ffffff?text=Article')}" alt="${escape(a.image_alt||a.title)}" onerror="this.onerror=null;this.src='https://placehold.co/600x400/cccccc/ffffff?text=Image+Not+Found';">
            <div class="p-6">
              <p class="text-sm text-gray-500">${escape(a.section||'Article')} ‚Ä¢ ${fmtDate(a.date)}</p>
              <h3 class="text-xl font-serif font-bold">${escape(a.title)}</h3>
              <p class="mt-2 text-sm text-gray-700 dark:text-gray-300">${escape(a.summary||'')}</p>
            </div>
          </article>`).join('');
        }

        // SECTION renderers
        function fillSection(sectionId, filter, limit=5){
          const root = document.querySelector(sectionId);
          if(!root) return;
          let container = root.querySelector('.space-y-6') || root.querySelector('.list') || root;
          const items = parsed.filter(filter).slice(0,limit);
          if(!items.length) return;
          container.innerHTML = items.map(a=>`
            <article class="card bg-white dark:bg-gray-900 p-4 rounded-xl shadow ring-1 ring-gray-200 dark:ring-gray-800 flex items-start gap-4" data-tags="${escape(((a.tags||[]).join(',') + ',' + (a.section||'')).toLowerCase())}" data-title="${escape(a.title)}">
              <img src="${escape(a.image||'https://placehold.co/150x100/94a3b8/ffffff?text=Img')}" class="w-24 h-24 object-cover rounded" alt="${escape(a.image_alt||a.title)}" onerror="this.onerror=null;this.src='https://placehold.co/150x100/cccccc/ffffff?text=Image';">
              <div>
                <h3 class="font-serif font-bold text-lg"><a href="${escape(a.url)}" class="hover:text-blue-600">${escape(a.title)}</a></h3>
                <p class="text-sm text-gray-700 dark:text-gray-300 mt-1">${escape(a.summary||'')}</p>
                <p class="text-xs text-gray-500 mt-2">${escape(a.author||'Staff Reporter')} ‚Ä¢ ${fmtDate(a.date)}</p>
              </div>
            </article>
          `).join('');
        }

        fillSection('#politics', a=> (a.section||'').includes('politic'));
        fillSection('#public-health', a=> (a.section||'').includes('health'));
        fillSection('#business', a=> (a.section||'').includes('business'));
        fillSection('#science-tech', a=> (a.section||'').includes('science') || (a.section||'').includes('technolog'));
        fillSection('#environment', a=> (a.section||'').includes('environment') || (a.section||'').includes('sustain'));
        fillSection('#education', a=> (a.section||'').includes('education'));
        fillSection('#college-admissions', a=> (a.section||'').includes('admission'));
        fillSection('#sports', a=> (a.section||'').includes('sports'));

        // Sidebar lists for Opinion and Culture
        function fillSimpleList(sectionId, filter, limit=5){
          const root = document.querySelector(sectionId);
          if(!root) return;
          const ul = root.querySelector('ul') || root;
          const items = parsed.filter(filter).slice(0,limit);
          if(!items.length) return;
          ul.innerHTML = items.map((a,i)=>`
            <li ${i? 'class="pt-4 border-t border-gray-200 dark:border-gray-800"':''}>
              <a href="${escape(a.url)}" class="font-semibold hover:text-blue-600">${escape(a.title)}</a>
              <p class="text-xs text-gray-500">${escape(a.author||'Staff')} ‚Ä¢ ${fmtDate(a.date)}</p>
            </li>
          `).join('');
        }
        fillSimpleList('#opinion', a=> (a.section||'').includes('opinion'));
        fillSimpleList('#culture', a=> (a.section||'').includes('culture') || (a.section||'').includes('religion'));

        // Update Top Story (uses IDs)
        const top = parsed.find(a => (a.section || '').includes('top')) || parsed[0];
        if (top) {
          const link = document.getElementById('top-link'); if (link) link.href = top.url;
          const titleEl = document.getElementById('top-title'); if (titleEl) titleEl.textContent = top.title;
          const dateEl = document.getElementById('top-date'); if (dateEl) dateEl.textContent = `${(top.section || 'Top Story')} ‚Ä¢ ${fmtDate(top.date)}`;
          const imgEl = document.getElementById('top-image'); if (imgEl && top.image) imgEl.src = top.image;
          const authorEl = document.getElementById('top-author'); if (authorEl) authorEl.textContent = `By ${top.author || 'Staff Reporter'}`;
          const sumEl = document.getElementById('top-summary'); if (sumEl) sumEl.textContent = top.summary || '';
        }
      }catch(e){
        console.warn('Auto-list failed', e);
      }
    }
    loadArticles();
  </script>
